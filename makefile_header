######################################################################
#
# Makefile for scripts
#
######################################################################

INSTALL_DIR=$(HOME)/scripts

######################################################################

INSTALL=install
INSTALL_EXEC=$(INSTALL) -m 555 -p
INSTALL_FILE=$(INSTALL) -m 444 -p

MKDIR=mkdir -p

######################################################################

default:
	@echo "Use 'make install' to install."
	@echo "Install directory is $(INSTALL_DIR)"

######################################################################

install:: install_dir

install_dir: $(INSTALL_DIR)

$(INSTALL_DIR):
	$(MKDIR) $@

######################################################################

Makefile: modules
	gen-makefile.pl

